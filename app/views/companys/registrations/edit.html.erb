<%= stylesheet_link_tag 'companys/form', :media => "all" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, id: 'edit_company') do |f| %>
<%= render "companys/shared/error_messages", resource: resource %>


<div class="form-wrap">
<h1>会社新規登録</h1>

  <div class="basic-items">
    <table class="basic-form">
      <tr>
        <th colspan="2">基礎項目(マイページには表示されません)</th>
      </tr>

      <tr>
        <th>メール</th>
        <td><%= f.email_field :email, autofocus: true %></td>
      </tr>

      <tr>
        <th>新パスワード</th>
        <td><%= f.password_field :password, placeholder:"半角英数字混合(6文字以上)" %></td>
      </tr>

      <tr>
        <th>新パスワード(確認)</th>
        <td><%= f.password_field :password_confirmation, placeholder:"半角英数字混合(6文字以上)" %></td>
      </tr>

      <tr>
        <th>現在のパスワード</th>
        <td><%= f.password_field :current_password %></td>
      </tr>
    </table>
  </div>


  <div class="profile-container">
    <div class="guide">
      <div class="text1">マイページ記載項目</div>
      <div class="actions">
          <%= f.submit "この内容で更新する", class: "form-button" %>
      </div>
    </div>
    <table class="profile">
      <tr>
        <th rowspan="4" class="form-image">
          <p class="text2">画像をアップロード</p>
          <div id="image"><%= image_tag @company.image ,class:"" %></div>
          <label for="image_form">
            <span class="form-button2">画像を選択</span><%= f.file_field :image, id: "image_form" %>
          </label>
        </th>
        <td>会社名：<%= f.text_field :name, class: "name", placeholder:"必須" %></td>
      </tr>

      <tr><td>代表者：<%= f.text_field :president, placeholder:"社長・店長", class: "president" %></td></tr>
      <tr><td>電話番号：<%= f.text_field :phone, placeholder:"必須(半角数字のみ)", class: "phone" %></td></tr>
      <tr><td>HP：<%= f.text_field :homepage, placeholder:"任意", class: "homepage" %></td></tr>

      <tr>
        <td colspan="2">
        会社紹介<br><%= f.text_area :profile, placeholder:"会社PR", class: "description" %></td>
      </tr>
      </table>
    <% end %>
  </div>
</div>
<%= render "companys/shared/links" %>
