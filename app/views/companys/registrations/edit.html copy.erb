<%= stylesheet_link_tag 'companys/form', :media => "all" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, id: 'new_bazaar') do |f| %>
<%= render "companys/shared/error_messages", resource: resource %>

<div class="form-wrap">
  <div class="profile-container">
    <table class="profile">
      <tr>
        <th rowspan="5" class="image"><%= image_tag @company.image, size: "300x300" %></th>
        <th>会社名：<%= @company.name %></th>
      </tr>

      <tr><td>代表：<%= @company.president %></td></tr>
      <tr><td>所在地<br>
        <%= @company.prefecture.name %><%= @company.city %><%= @company.address %></td></tr>
      <tr><td><%= @company.phone %></td></tr>
      <tr><td><%= link_to "会社HP", @company.homepage, class: "link-button1" %>※外部リンク</td></tr>

      <tr><td colspan="2" class="description"><%= @company.profile %></td></tr>
    </table>
  </div>
</div>

<h2 id="new_company">Edit <%= resource_name.to_s.humanize %></h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: 'new_bazaar') do |f| %>
  <%= render "companys/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(新しいパスワード)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上　半角英数混合</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(現在のパスワード)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br><br>

  <div id="image_company"></div>
  <div>
    <p id="text_company">画像を変更する場合はクリックしてアップロード</p>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :president %><br />
    <%= f.text_field :president, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :homepage %><br />
    <%= f.text_area :homepage, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
