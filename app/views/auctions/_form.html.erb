<%= stylesheet_link_tag 'auctions/new', :media => "all" %>


<%= form_with model: auction, id: 'new_auction', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>


  <div class="category-and-submit">
    <div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: 'カテゴリーを選択'}, {class:"form-select1", id:""}) %>
    </div>

    <div>
      <%= f.submit "出品する", class:"form-button2" %>
    </div>
  </div>

  <table class="form-table1">
    <tr>
      <th colspan="4"><span class="form-text1">タイトル：<%= f.text_field :title, placeholder:"30文字まで", maxlength:"30", class: "form-title" %></th>
    </tr>

    <tr>
      <td><span class="form-text1">予算(単価)<br>
      <%= f.text_field :price, placeholder:"半角数字", class: "new-forms" %>円</span></td>
      <td><span class="form-text1">欲しい数<br>
      <%= f.text_field :stock, placeholder:"半角数字", class: "new-forms" %>個</span></td>

      <td><span class="form-text1">送料の希望<br></span>
      <%= f.collection_select(:delivery_charge_id, DeliveryCharge.all, :id, :name, {}, {class: "form-select2", id:""}) %></td>
      <td>
        <span class="form-text1">この日までに欲しい<br>
        <%= raw sprintf(
                      f.date_select(
                        :deadline,
                        class:'form-select2',
                        id:"",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2021,
                        end_year: (Time.now.year + 5),
                        date_separator: '%s'),
                      "年 ", "月 ") + "日 " %></span>
      </td>
    </tr>

    <tr>
      <td colspan="4"><span class="form-text1">詳細(文字数制限無し)
      <%= f.text_area :description, placeholder:"例：友人とバーベキューに行くので、それに合う食材が欲しい。", class: "form-description" %></span></td>
    </tr>
  </table>
<% end %>