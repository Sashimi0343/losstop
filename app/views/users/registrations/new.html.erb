<%= stylesheet_link_tag 'users/form', :media => "all" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: 'new_user') do |f| %>
<%= render "users/shared/error_messages", resource: resource %>

<div class="form-wrap">
<h1>ユーザー新規登録</h1>

  <div class="basic-items">
    <table class="basic-form">
      <tr>
        <th colspan="3">基礎項目(マイページには表示されません)</th>
      </tr>

      <tr>
        <th>メール</th>
        <td colspan="2"><%= f.email_field :email, autofocus: true %></td>
      </tr>

      <tr>
        <th>パスワード</th>
        <td colspan="2"><%= f.password_field :password, placeholder:"半角英数字6文字以上" %></td>
      </tr>

      <tr>
        <th>パスワード(確認)</th>
        <td colspan="2"><%= f.password_field :password_confirmation, placeholder:"半角英数字6文字以上" %></td>
      </tr>

      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name, autofocus: true, placeholder:"漢字・ひらがな・カナ" %></td>
        <td><%= f.text_field :first_name, autofocus: true, placeholder:"漢字・ひらがな・カナ" %></td>
      </tr>

      <tr>
        <th>氏名(カタカナ)</th>
        <td><%= f.text_field :last_name_kana, autofocus: true, placeholder:"カタカナのみ" %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, placeholder:"カタカナのみ" %></td>
      </tr>

      <tr>
        <th>誕生日</th>
        <td colspan="2"><div class="field">
          <%= raw sprintf(
                        f.date_select(
                          :birthday,
                          class:'birthday',
                          id:"birth-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 1930,
                          end_year: (Time.now.year - 5),
                          date_separator: '%s'),
                        " 年 ", " 月 ") + " 日 " %>
        </div></td>
      </tr>
    </table>
  </div>


  <div class="profile-container">
    <div class="guide">
      <div class="text1">マイページ記載項目</div>
      <div class="auctions">
          <%= f.submit "この内容で登録する", class: "form-button" %>
      </div>
    </div>
    <table class="profile">
      <tr>
        <th>ニックネーム</th>
        <td><%= f.text_field :name, class: "name", placeholder:"必須" %></td>
      </tr>

      <tr>
        <td colspan="2">
        紹介PR<br><%= f.text_area :profile, placeholder:"任意：欲しい物や宣伝など", class: "description" %></td>
      </tr>
    </table>
  </div>
</div>
<% end %>
<%= render "users/shared/links" %>